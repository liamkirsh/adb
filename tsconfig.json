// tsconfig.json
{
  "compilerOptions": {
    "outDir": "./built",
    // this aligns with Vue's browser support
    "target": "es6",
    "lib": ["es6", "dom", "dom.iterable"],
    "module": "es2015",
    "moduleResolution": "node",

    // TODO(mdempsky): Tighten.
    // "strict": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "types": ["jquery"],
  },
  "include": [
    "./frontend/*",
  ],
}
